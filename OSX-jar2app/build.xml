<?xml version="1.0" encoding="UTF-8"?>
<project name="JAP" default="default" basedir=".">        
    <import file="nbproject/build-impl.xml"/>

    <taskdef name="bundleapp"
             classname="com.oracle.appbundler.AppBundlerTask"   
             classpath="lib/appbundler-1.0.jar" />

    <target name="bundle-jap">
        <bundleapp outputdirectory="dist"
            name="JAP"
            displayname="JAP"
            identifier="JAP"
            mainclassname="JAP">
            <runtime dir="/Library/Java/JavaVirtualMachines/jdk1.8.0_151.jdk/Contents/Home"/>
            <classpath file="dist/JAP.jar" />
        </bundleapp>
    </target>

</project>